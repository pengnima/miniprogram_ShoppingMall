page {
  height: 100%;
}
.goods_scroll {
  height: calc(100vh - 172rpx);
}
.goods_item {
  display: flex;
  padding: 10rpx 10rpx 10rpx 30rpx;
  border-bottom: 4rpx solid #ddd;
}
.item_img_wrap {
  flex: 1;
}
.item_img_wrap image {
  width: 100%;
  height: 100%;
}
.item_info_wrap {
  flex: 2;
  padding-left: 40rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item_info_wrap .info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item_info_wrap .price {
  color: var(--themColor);
  font-size: 32rpx;
}
